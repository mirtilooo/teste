    // JavaScript code for random assignment
    function submitForm() {
      const nickname = document.getElementById('nickname').value;
      const description = document.getElementById('description').value;

      // You would typically send this data to a server for processing
      // For simplicity, let's just log the data to the console here
      console.log(`Nickname: ${nickname}, Description: ${description}`);
    }
